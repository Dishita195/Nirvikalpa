---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
---

<Layout>
  <h1 class="againsthead">Wander in Nature</h1>
  <h2 class="subhead">a catalogue of magic, mystery and  mother earth</h2>
  <Header />
  <ul>
    <li><img src="/Insects/1.jpg" alt=""></li>
    <li><video src="/Insects/video1.mp4"></video></li>
    <li><img src="/Insects/2.jpg" alt=""></li>
    <li><img src="/Insects/3.jpg" alt=""></li>
    <li><img src="/Insects/4.jpg" alt=""></li>
    <li><img src="/Insects/5.jpg" alt=""></li>
    <li><img src="/Insects/6.jpg" alt=""></li>
    <li><img src="/Insects/7.jpg" alt=""></li>
    <li><img src="/Insects/8.jpg" alt=""></li>
    <li><img src="/Insects/9.jpg" alt=""></li>
    <li><img src="/Insects/10.jpg" alt=""></li>
    <li><img src="/Insects/11.jpg" alt=""></li>
    <li><img src="/Insects/12.jpg" alt=""></li>
  </ul>
</Layout>

<style>
  ul {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(100px,1fr));
  grid-auto-rows: minmax(auto, 0.3vh);
  grid-gap: 1rem;
  grid-auto-flow: dense;

}

li:nth-child(3),
li:nth-child(2),
li:nth-child(5),
li:nth-child(11),
li:nth-child(10) {
  grid-column: span 3;
  grid-row: span 22;
}
li:nth-child(7),
li:nth-child(12),
li:nth-child(8) {
  grid-column: span 3;
  grid-row: span 15;

}
li:nth-child(1),
li:nth-child(4),
li:nth-child(6),
li:nth-child(13),
li:nth-child(9) {
  grid-column: span 3;
  grid-row: span 10;

}
img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}
video {
   width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}







body {
  /* background: #F6F3EA; */

}
ul {
  margin: 20px;
  padding: 0;
  list-style: none;
  color: white;
  font-family: Avenir, Heveltica, Arial, san-serif;
  font-weight: bold;
  font-size: 1.2rem;
}
li {
  padding: 1em;
  background: #ffedec;
  text-align: center;
  justify-items: center;
}



.againsthead {
    background-color: #645D3E;
    color: white;
    font-size: 64px;
  }
</style>